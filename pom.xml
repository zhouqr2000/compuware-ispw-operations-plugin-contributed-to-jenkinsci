			<name>Janario Oliveira</name>
			<email>janario.oliveira@gmail.com</email>
		</contributor>
		<contributor>
			<name>Martin d'Anjou</name>
			<email>martin.danjou14@gmail.com</email>
		</contributor>
		<contributor>
			<name>Sam Zhou</name>
			<email>sam.zhou@compuware.com</email>
		</contributor>
	</contributors>
</project>
